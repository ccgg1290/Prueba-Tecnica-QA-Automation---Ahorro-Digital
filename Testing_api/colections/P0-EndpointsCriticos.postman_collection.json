	"item": [
		{
			"name": "P0-1: Cálculo exitoso",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test 1: Status 200",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"// Test 2: Earnings calculation correct",
							"pm.test(\"Earnings calculation is correct\", function () {",
							"    const response = pm.response.json();",
							"    const expectedEarnings = 1000000 * 0.06 * (6/12); // 6% anual, 6 meses",
							"    pm.expect(response.data.earnings).to.equal(expectedEarnings);",
							"});",
							"",
							"// Test 3: Total amount correct",
							"pm.test(\"Total amount is correct\", function () {",
							"    const response = pm.response.json();",
							"    const expectedTotal = 1000000 + (1000000 * 0.06 * (6/12));",
							"    pm.expect(response.data.totalAmount).to.equal(expectedTotal);",
							"});",
							"",
							"// Test 4: Response structure",
							"pm.test(\"Response has correct structure\", function () {",
							"    const response = pm.response.json();",
							"    pm.expect(response).to.have.property(\"success\", true);",
							"    pm.expect(response).to.have.property(\"data\");",
							"    pm.expect(response.data).to.have.property(\"earnings\");",
							"    pm.expect(response.data).to.have.property(\"totalAmount\");",
							"    pm.expect(response).to.have.property(\"timestamp\");",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"productId\": \"{{productId}}\",\n    \"amount\": 1000000,\n    \"months\": 6\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/simulator/calculate",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"simulator",
						"calculate"
					]
				}
			},
			"response": []
		},
